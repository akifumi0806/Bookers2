<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h2>User info</h2>
				<%= link_to "プロフィール編集", mypages_path, class: "btn btn-primary btn-lg btn-block" %>

    	</div>

    	<div class="col-md-9">
    		<h2>Book</h2>
    	</div>

		<div class="col-md-3">
			<h2>New book</h2>
			<%= form_for(@book, url: 'indsex') do |f| %>

    		<h4>Title</h4>
    		<%= f.text_field :title %>

    		<h4>Opinion</h4>
    		<%= f.text_area :body %>

    		<%= f.submit 'Create Book', class: "btn btn-primary btn-lg btn-block" %>
			<% end %>
		</div>
	</div>
</div>
