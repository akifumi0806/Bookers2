

<div class="container">

		<div class="col-md-6 col-md-offset-3">

		<h2>Editing Book</h2>
        <% if @book.errors.any? %>
            <div class="alert alert-warning">
                <ul>
                    <%= @book.errors.count%>errors prohibited this obj from being saved:
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
			<%= form_for(@book) do |f| %>

			<div class="row">
    			<h4>Title</h4>
    				<div class="col-md-12">
    				<%= f.text_field :title %>
    				</div>
    		</div>
    			<h4>Opinion</h4>
    				<div class="span12">
    				<%= f.text_area :body %>
    				</div>

    		<%= f.submit 'Update Book', class: "btn btn-primary btn-lg btn-block" %>
			<% end %>

			<%=link_to 'Show', book_path %>
			|
			<%=link_to 'Back', books_path %>
    	</div>
</div>