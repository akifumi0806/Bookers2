<div class="container">

		<div class="col-md-6 col-md-offset-3">

		<h2>Edit Book</h2>
			<%= form_for(@book) do |f| %>

			<div class="row">
    			<h4>Title</h4>
    				<div class="col-md-12">
    				<%= f.text_field :title %>
    				</div>
    		</div>
    			<h4>Opinion</h4>
    				<div class="span12">
    				<%= f.text_area :body %>
    				</div>

    		<%= f.submit 'Update Book', class: "btn btn-primary btn-lg btn-block" %>
			<% end %>

			<%=link_to 'show', book_path %>
			|
			<%=link_to 'back', users_path %>
    	</div>
</div>